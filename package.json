  "homepage": "https://github.com/jeffjewiss/sails-hook-postcss#readme",
  "dependencies": {
    "async": "^1.4.0",
    "glob": "^7.0.3",
    "mkdirp": "^0.5.1",
    "object-assign": "^4.0.1",
    "postcss": "^5.0.0",
    "watch": "^0.17.1"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "coveralls": "2.11.11",
    "mocha": "2.5.3",
    "nyc": "7.1.0",
    "postcss-pseudoelements": "3.0.0",
