{
  "name": "sails-hook-postcss",
  "version": "1.1.0",
  "description": "Compile CSS with Postcss and watch for changes.",
  "main": "index.js",
  "sails": {
    "isHook": true
  },
  "scripts": {
    "test": "nyc mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "lint": "standard --verbose | snazzy",
    "prepublish": "npm run lint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeffjewiss/sails-hook-postcss.git"
  },
  "keywords": [
    "hook",
    "postcss",
    "sails"
  ],
  "author": "Jeff Jewiss",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jeffjewiss/sails-hook-postcss/issues"
  },
  "homepage": "https://github.com/jeffjewiss/sails-hook-postcss#readme",
  "dependencies": {
    "async": "^2.0.1",
    "glob": "^7.0.5",
    "mkdirp": "^0.5.1",
    "object-assign": "^4.1.0",
    "postcss": "^6.0.6",
    "watch": "^1.0.0"
  },
  "devDependencies": {
    "chai": "4.1.1",
    "coveralls": "2.11.14",
    "mocha": "3.1.2",
    "nyc": "11.1.0",
    "postcss-pseudoelements": "3.0.0",
    "rimraf": "2.5.4",
    "sails": "0.12.8",
    "snazzy": "5.0.0",
    "standard": "8.6.0"
